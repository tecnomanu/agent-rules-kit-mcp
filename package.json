{
	"name": "agent-rules-kit-mcp",
	"version": "1.0.0",
	"description": "MCP Server for Agent Rules Kit - Tools for agent rules management",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node dist/index.js",
		"start:http": "node dist/http.js",
		"dev:stdio": "npm run build && npm run start",
		"dev:http": "npm run build && npm run start:http",
		"clean": "rm -rf dist"
	},
	"keywords": [
		"mcp",
		"agent-rules",
		"ai-tools",
		"server"
	],
	"author": "Agent Rules Kit Team",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^0.5.0",
		"express": "^4.18.0",
		"cors": "^2.8.5"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/express": "^4.17.0",
		"@types/cors": "^2.8.0",
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tecnomanu/agent-rules-kit-mcp"
	}
}
